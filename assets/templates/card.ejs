<% var i ="&"+suit+";" %>
<div class="card rank-<%= rank.toLowerCase() %> <%= suit %>">
  <div class="front">
    <div class="rank"><%= rank.toUpperCase() %></div>
    <div class="suit">
    	<% if (rank == "a" || rank == "k" || rank == "q" ||rank == "j") { %>
    		<%= i %>
    	<% } %></div>
    <div class="icon">
    	<% if (rank == "a") { %>
    		<%= "&"+suit+";" %>
    	<% } else if (rank == "k") { %>
    		<%="&#9818;"%>
    	<% } else if (rank == "q") { %>
    		<%="&#9819;"%>
    	<% } else if (rank == "j") { %>
    		<%="&#9823;"%>
    	<% } else if (rank == "10") { %>
    		<%=i+i+i+"<br>"+i+i+i+i+"<br>"+i+i+i%>
    	<% } else if (rank == "9") { %>
    		<%=i+i+i+"<br>"+i+i+i+"<br>"+i+i+i%>
    	<% } else if (rank == "8") { %>
    		<%=i+i+i+"<br>"+i+" "+i+"<br>"+i+i+i%>
    	<% } else if (rank == "7") { %>
    		<%=i+" "+i+"<br>"+i+i+i+"<br>"+i+" "+i%>
    	<% } else if (rank == "6") { %>
    		<%=i+" "+i+"<br>"+i+" "+i+"<br>"+i+" "+i%>
    	<% } else if (rank == "5") { %>
    		<%=i+" "+i+"<br>"+i+"<br>"+i+" "+i%>
    	<% } else if (rank == "4") { %>
    		<%=i+" "+i+"<br><br>"+i+" "+i%>
    	<% } else if (rank == "3") { %>
    		<%=i+"<br>"+i+"<br>"+i%>
    	<% } else if (rank == "2") { %>
    		<%=i+"<br><br>"+i%>
    	<% } else { %>
    		<%=""%>
    	<% } %>
	</div>
  </div>
  <div class="back"></div>
</div>